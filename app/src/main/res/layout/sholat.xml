<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/kakbah"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/kakbah2" />

        <TextView
            android:id="@+id/tvSelanjut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:text="@string/selanjut"/>

        <TextView
            android:id="@+id/tvSholat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSelanjut"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/waktu"
            android:textStyle="bold"
            android:textAllCaps="false"/>

        <TextView
            android:id="@+id/jam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="35dp"
            android:text="@string/jam"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/kota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tvSholat"
            android:text="@string/kota"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/kota"
            android:text="@string/tanggal"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"/>

        <TableLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:layout_below="@id/kakbah">


            <TextView
                android:background="@drawable/buttonslec"
                android:id="@+id/btncity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"/>

            <TableLayout
                android:stretchColumns="1">

                <TableRow
                    android:background="@drawable/buttonslec"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/loc"
                        android:text="@string/location"
                        android:textSize="13sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textloc"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonslec">

                    <TextView
                        android:id="@+id/date"
                        android:text="@string/date"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textdate"
                        android:textSize="13sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>

            </TableLayout>

            <TableLayout
                android:layout_width="369dp"
                android:layout_height="wrap_content">

                <TableRow android:background="@drawable/buttonslec">

                    <TextView
                        android:id="@+id/subuh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/subuh"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textsubuh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginLeft="120dp"
                        android:layout_weight="1"
                        android:textSize="13sp"/>
                </TableRow>

                <TableRow android:background="@drawable/buttonslec">

                    <TextView
                        android:id="@+id/dzuhur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dzuhur"
                        android:layout_weight="1"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textdzh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginLeft="120dp"
                        android:layout_weight="1"
                        android:textSize="13sp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/buttonslec">

                    <TextView
                        android:id="@+id/ashar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ashar"
                        android:layout_weight="1"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginLeft="120dp"
                        android:layout_weight="1"
                        android:textSize="13sp" />
                </TableRow>

                <TableRow android:background="@drawable/buttonslec">

                    <TextView
                        android:id="@+id/magrib"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/maghrib"
                        android:layout_weight="1"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textmgh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginLeft="120dp"
                        android:layout_weight="1"
                        android:textSize="13sp" />
                </TableRow>

                <TableRow android:background="@drawable/buttonslec">

                    <TextView
                        android:id="@+id/isya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/isya"
                        android:layout_weight="1"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/textisy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="120dp"
                        android:layout_marginLeft="120dp"
                        android:layout_weight="1"
                        android:textSize="13sp" />
                </TableRow>

            </TableLayout>

        </TableLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>